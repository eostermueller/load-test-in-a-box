<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.eostermueller.snail4j</groupId>
  <artifactId>loadTest</artifactId>
  <version>0.0.1</version>
  <properties>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.failsafe.version>2.22.2</maven.failsafe.version>
    <slf4jVersion>1.6.1</slf4jVersion>
    <h2.maven.plugin.version>1.0</h2.maven.plugin.version>
    <h2.port>9093</h2.port>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4jVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <version>${slf4jVersion}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
    
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <configuration>
          <systemPropertyVariables>
            <com.github.eostermueller.snail4j.sentinel.file>
            ${env.HOME}/.snail4j/deleteMeToStopPerfGoatSut.txt</com.github.eostermueller.snail4j.sentinel.file>
          </systemPropertyVariables>
        </configuration>
        <artifactId>maven-failsafe-plugin</artifactId>
        <version>${maven.failsafe.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.bazaarvoice.maven.plugins</groupId>
        <artifactId>process-exec-maven-plugin</artifactId>
        <version>0.9</version>
        <!-- <version>0.10-SNAPSHOT</version> -->
        <executions>
          <!--Start process 1, eg., a dropwizard app dependency-->
          <execution>
            <id>wirmock</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <name>wiremock</name>
              <workingDir>
              ${env.HOME}/.snail4j/wiremock</workingDir>
              <waitForInterrupt>false</waitForInterrupt>
              <waitAfterLaunch>4</waitAfterLaunch>
<!--              <tcpHealthcheckHostname>
              localhost</tcpHealthcheckHostname>
              <tcpHealthcheckPort>8081</tcpHealthcheckPort>
 -->
              <arguments>
                <argument>mvn</argument>
                <argument>clean</argument>
                <argument>compile</argument>
                <argument>wiremock:run</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>start-h2</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <name>h2</name>
              <workingDir>
              ${env.HOME}/.snail4j/data</workingDir>
              <waitForInterrupt>false</waitForInterrupt>
              <waitAfterLaunch>4</waitAfterLaunch>
<!--              <tcpHealthcheckHostname>
              localhost</tcpHealthcheckHostname>
              <tcpHealthcheckPort>${h2.port}</tcpHealthcheckPort>
  -->
              <arguments>
                <argument>mvn</argument>
                <argument>-Dh2.port=${h2.port}</argument>
                <argument>
                -Dh2.baseDirectory=${env.HOME}/.snail4j/data</argument>
                <argument>com.edugility:h2-maven-plugin:${h2.maven.plugin.version}:spawn</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>sut</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <name>sut</name>
              <workingDir>
              ${env.HOME}/.snail4j/tjp2</workingDir>
              <waitForInterrupt>false</waitForInterrupt>
              <waitAfterLaunch>4</waitAfterLaunch>
<!--              <tcpHealthcheckHostname>
              localhost</tcpHealthcheckHostname>
              <tcpHealthcheckPort>8080</tcpHealthcheckPort>
  -->
              <arguments>
                <argument>mvn</argument>
                <argument>spring-boot:run</argument>
              </arguments>
            </configuration>
          </execution>
          <!--Stop all processes in reverse order-->
          <execution>
            <id>stop-all</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>stop-all</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
         <groupId>com.edugility</groupId>
         <artifactId>h2-maven-plugin</artifactId>
         <version>${h2.maven.plugin.version}</version>
         <configuration>
           <port>${h2.port}</port>
         </configuration>
         <executions>
             <execution>
               <id>Stop a spawned H2 TCP server</id>
               <goals>
                 <goal>stop</goal>
               </goals>
             </execution>
           </executions>
       </plugin>

    </plugins>
  </build>
</project>
