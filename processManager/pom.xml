      <plugin>
        <groupId>com.bazaarvoice.maven.plugins</groupId>
        <artifactId>process-exec-maven-plugin</artifactId>
        <!-- <version>0.9</version> -->
        <version>0.10-SNAPSHOT</version>
        <executions>
          <!--Start process 1, eg., a dropwizard app dependency-->
          <execution>
            <id>wirmock</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <name>wiremock</name>
              <workingDir>/Users/erikostermueller/.perfGoat/wiremock</workingDir>
              <waitForInterrupt>false</waitForInterrupt>
              <waitAfterLaunch>4</waitAfterLaunch>
              <tcpHealthcheckHostname>localhost</tcpHealthcheckHostname>
              <tcpHealthcheckPort>8081</tcpHealthcheckPort>
              <arguments>
                <argument>mvn</argument>
                <argument>clean</argument>
                <argument>compile</argument>
                <argument>wiremock:run</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>h2</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <name>h2</name>
              <workingDir>/Users/erikostermueller/.perfGoat/data</workingDir>
              <waitForInterrupt>false</waitForInterrupt>
              <waitAfterLaunch>4</waitAfterLaunch>
              <tcpHealthcheckHostname>localhost</tcpHealthcheckHostname>
              <tcpHealthcheckPort>9092</tcpHealthcheckPort>
              <arguments>
                <argument>mvn</argument>
                <argument>-Dh2.baseDirectory=/Users/erikostermueller/.perfGoat/data</argument>
                <argument>com.edugility:h2-maven-plugin:1.0:spawn</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>sut</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>start</goal>
            </goals>
            <configuration>
              <name>sut</name>
              <workingDir>/Users/erikostermueller/.perfGoat/tjp2</workingDir>
              <waitForInterrupt>false</waitForInterrupt> 
              <waitAfterLaunch>4</waitAfterLaunch>
              <tcpHealthcheckHostname>localhost</tcpHealthcheckHostname>
              <tcpHealthcheckPort>8080</tcpHealthcheckPort>
              <arguments>
                <argument>mvn</argument>
                <argument>spring-boot:run</argument>
              </arguments>
            </configuration>
          </execution>

          <!--Stop all processes in reverse order-->
          <execution>
            <id>stop-all</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>stop-all</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
